<%- include('partials/header.ejs') %>
<%- include('partials/nav.ejs')%>

<section>
    <table class="table table-bordered table-striped w-75 mx-auto mt-3 text-center">
        <thead class="table-info">
            <tr>
                <th>User Name</th>
                <th>Password</th>
                <th>Email</th>
                <th>Role</th>
                <th>Active</th>
                <th>Date of Registration</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% userData.forEach((user) => { %>
                <tr>
                    <td><%= user.userName %></td>
                    <td><%= user.password %></td>
                    <td><%= user.emailId %></td>
                    <td><%= user.hasRole %></td>
                    <td><%= user.isActive ? "Active" : "Inactive" %></td>
                    <td><%= user.createsAt %></td>
                    <td><%= new Date(user.createdAt).toLocalString()%></td>
                    <td>
                        <a href="/admin/editUser/<%= user._id%>" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                    <td>
                        <a href="/admin/deleteUser/<%= user._id%>" class="btn btn-danger btn-sm">Delete User</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</section>

<%- include('partials/footer.ejs') %>
